{
  "name": "Python Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.9",
  "extensions": [
    "GitHub.copilot"
  ],
  "settings": {
    "python.pythonPath": "/usr/local/bin/python"
  },
  "postCreateCommand": "pip install --upgrade pip",
  "forwardPorts": [
    8000
  ],
  "remoteUser": "vscode"
}
